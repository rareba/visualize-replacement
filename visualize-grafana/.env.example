# Auth configuration (ADFS/eIAM)
ADFS_ISSUER=https://your-adfs-server
ADFS_ID=your-client-id
ADFS_SECRET=your-client-secret
ADFS_PROFILE_URL=https://your-adfs-server/profile
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Maptile configuration (optional - for legacy map support)
NEXT_PUBLIC_MAPTILER_STYLE_KEY=your-maptiler-key

# SEO
PREVENT_SEARCH_BOTS=false

# Grafana Integration
NEXT_PUBLIC_GRAFANA_URL=http://localhost:3003
NEXT_PUBLIC_GRAFANA_DATASOURCE_UID=lindas-datasource
NEXT_PUBLIC_GRAFANA_DASHBOARD_UID=lindas-template

# Grafana Auth (for production with ADFS)
# Set GRAFANA_ANONYMOUS_ENABLED=false and GRAFANA_OAUTH_ENABLED=true
# to use ADFS authentication in Grafana
GRAFANA_ANONYMOUS_ENABLED=true
GRAFANA_OAUTH_ENABLED=false
GRAFANA_ADMIN_PASSWORD=admin
