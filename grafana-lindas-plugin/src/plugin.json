{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/main/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "LINDAS",
  "id": "lindas-sparql-datasource",
  "metrics": true,
  "backend": false,
  "alerting": false,
  "annotations": false,
  "logs": false,
  "info": {
    "description": "Browse and visualize Swiss government datasets from LINDAS (Linked Data Services)",
    "author": {
      "name": "LINDAS Datasource Contributors"
    },
    "keywords": [
      "sparql",
      "rdf",
      "lindas",
      "linked-data",
      "knowledge-graph",
      "swiss-government"
    ],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [
      {
        "name": "LINDAS Portal",
        "url": "https://lindas.admin.ch"
      },
      {
        "name": "GitHub",
        "url": "https://github.com/your-org/grafana-lindas-plugin"
      }
    ],
    "screenshots": [],
    "version": "1.0.0",
    "updated": "2025-12-17"
  },
  "routes": [
    {
      "path": "sparql",
      "url": "{{ .JsonData.sparqlEndpoint }}",
      "headers": [
        {
          "name": "Accept",
          "content": "application/sparql-results+json"
        }
      ]
    }
  ],
  "dependencies": {
    "grafanaDependency": ">=9.0.0",
    "plugins": []
  }
}
