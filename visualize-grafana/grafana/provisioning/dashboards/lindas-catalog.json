    {
      "type": "marcusolsson-dynamictext-panel",
      "title": "",
      "gridPos": { "h": 18, "w": 24, "x": 0, "y": 8 },
      "id": 10,
      "transparent": true,
      "datasource": {
        "type": "flandersmake-sparql-datasource",
        "uid": "lindas-datasource"
      },
      "targets": [
        {
          "refId": "A",
          "queryText": "PREFIX cube: <https://cube.link/>\nPREFIX schema: <http://schema.org/>\nPREFIX dcterms: <http://purl.org/dc/terms/>\n\nSELECT DISTINCT \n  (ENCODE_FOR_URI(STR(?cube)) AS ?cubeUriEncoded)\n  (COALESCE(?name_en, ?name_any, REPLACE(STR(?cube), \"^.*/\", \"\")) AS ?name)\n  (COALESCE(?desc_en, ?desc_any, \"No description available\") AS ?description)\n  (COALESCE(?creatorName, \"Unknown\") AS ?creator)\n  (COALESCE(SUBSTR(STR(?modified), 1, 10), \"\") AS ?dateModified)\nWHERE {\n  ?cube a cube:Cube .\n  \n  OPTIONAL { ?cube schema:name ?name_en . FILTER(LANG(?name_en) = \"en\") }\n  OPTIONAL { ?cube schema:name ?name_any . }\n  \n  OPTIONAL { ?cube schema:description ?desc_en . FILTER(LANG(?desc_en) = \"en\") }\n  OPTIONAL { ?cube schema:description ?desc_any . }\n  \n  OPTIONAL { ?cube dcterms:creator/schema:name ?creatorName . }\n  OPTIONAL { ?cube schema:dateModified ?modified . }\n}\nORDER BY DESC(?modified)\nLIMIT 50"
        }
      ],
      "options": {
        "afterRender": "",
        "content": "<div style=\"font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif; padding: 20px 0;\">\n  <div style=\"display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; padding: 0 4px;\">\n    <span style=\"font-size: 16px; font-weight: 600; color: #1a1a1a;\">Available Datasets</span>\n    <span style=\"font-size: 13px; color: #666;\">{{data.length}} datasets loaded</span>\n  </div>\n  <div style=\"display: grid; grid-template-columns: repeat(auto-fill, minmax(380px, 1fr)); gap: 16px;\">\n    {{#each data}}\n    <a href=\"/d/lindas-description?var-cube={{cubeUriEncoded}}\" style=\"background: white; border: 1px solid #e0e0e0; border-radius: 8px; padding: 20px; text-decoration: none; display: block;\">\n      <div style=\"font-size: 12px; color: #888; margin-bottom: 8px;\">{{dateModified}}</div>\n      <div style=\"font-size: 17px; font-weight: 500; color: #1565c0; margin-bottom: 10px; line-height: 1.4;\">{{name}}</div>\n      <div style=\"font-size: 14px; color: #555; line-height: 1.5; margin-bottom: 12px;\">{{description}}</div>\n      <div style=\"display: flex; gap: 8px; flex-wrap: wrap;\">\n        <span style=\"padding: 4px 12px; border-radius: 14px; font-size: 12px; font-weight: 500; background: #f5f5f5; color: #666;\">{{creator}}</span>\n      </div>\n    </a>\n    {{/each}}\n  </div>\n</div>",
        "contentPartials": [],
